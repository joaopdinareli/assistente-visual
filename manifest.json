{
  "manifest_version": 3,
  "name": "Assistente Visual",
  "description": "Conjunto de ferramentas para melhorar a acessibilidade e o conforto visual durante a navegação web.",
  "version": "0.3.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-lupa": {
      "suggested_key": {
        "default": "Alt+L"
      },
      "description": "Ativar/Desativar Lupa"
    }
  }
}